<UserControl x:Class="PointOfSale.PaymentOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Click="CardPayment_Click" x:Name="DebitCardPayment" 
                Grid.Row="0" FontSize="30" >Debit</Button>
            <Button Click ="CardPayment_Click" x:Name="CreditCardPayment" 
                Grid.Row="1" FontSize="30">Credit</Button>
            <Button Click ="CashPayment_Click" x:Name="CashPayment" Grid.Row="2" FontSize="30">Cash</Button>
            <Button Click ="ReturnToMenuItemSelectionScreenButton_Click" 
                x:Name="ReturntoMenu" Grid.Row="3" FontSize="30">
                Back</Button>
        </Grid>
    </Grid>
</UserControl>
